# MongoDB Atlas connection string
# Get this from MongoDB Atlas dashboard
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/chatapp?retryWrites=true&w=majority

# JWT secret - generate a secure random string
# Use: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=your-secret-key-here-change-this

# Redis connection URL
# For Redis Labs free tier or Render Redis add-on
REDIS_URL=redis://default:password@hostname:port

# Backend URL (for client)
BACKEND_URL=https://your-app.onrender.com
